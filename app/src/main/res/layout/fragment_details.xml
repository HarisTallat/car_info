<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Details">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="247dp"
            android:layout_height="212dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameo"
                android:layout_width="374dp"
                android:layout_height="36dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"


                android:text="Owner's Nmae "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvowner"
                android:layout_width="238dp"
                android:layout_height="43dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/design"
                android:drawableRight="@drawable/person"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/namec"
                android:layout_width="216dp"
                android:layout_height="33dp"

                android:layout_marginLeft="5dp"
                android:text="Owners's Contact"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvcontact"
                android:layout_width="234dp"
                android:layout_height="43dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="170dp"
                android:background="@drawable/design"
                android:drawableRight="@drawable/ic_baseline_call_24"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="174dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_person_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivcar"
        android:layout_width="267dp"
        android:layout_height="95dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_directions_car_filled_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="45dp"


        android:background="@drawable/design"
        android:fontFamily="@font/bungee_inline"
        android:gravity="center"
        android:text="@string/swipe_for_call" />

    <TextView
        android:id="@+id/compname"
        android:layout_width="386dp"
        android:layout_height="35dp"
        android:text="Company Name"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_margin="10dp"
        android:background="@drawable/design"
        android:drawableRight="@drawable/ic_baseline_directions_car_filled_24"
        android:fontFamily="@font/bungee_inline"
        android:gravity="center"
        android:textColor="@color/black" />

</LinearLayout>